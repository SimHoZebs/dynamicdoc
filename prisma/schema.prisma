// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Doc {
  id         String     @id @default(uuid())
  title      String
  blockArray Block[]
  blockOrder String[]
}

model Block {
  id      String    @id @default(uuid())
  type    String
  content String
  doc    Doc   @relation(fields: [docId], references: [id])
  docId  String @map("pageId")
}
